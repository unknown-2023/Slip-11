func triple_sum(a: Int, b: Int) -> Int {
    if a == b 
     {
        return (a + b) * 3
     }
     else 
     {
        return a + b
     }
 }
for n in 1...4
{
print("enter the two numbers") 
print("answer is --> ",triple_sum(a:Int(readLine(strippingNewline:true)!)! ,b: Int(readLine(strippingNewline:true)!)!))  
}
